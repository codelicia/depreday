#!/usr/bin/env php
<?php

use Malukenho\Depreday\Console\App;
use PackageVersions\Versions;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\Input\InputArgument;

(static function () : void {
    $autoload = array_filter(
        [
            __DIR__ . '/../../../autoload.php',
            __DIR__ . '/../../autoload.php',
            __DIR__ . '/../vendor/autoload.php',
        ],
        'is_file'
    );

    if (! count($autoload)) {
        fwrite(
            STDERR,
            'You need to set up the project dependencies using the following commands:' . PHP_EOL .
            'wget http://getcomposer.org/composer.phar' . PHP_EOL .
            'php composer.phar install' . PHP_EOL
        );

        die(1);
    }

    $autoloadPath = realpath(current($autoload));

    /* @noinspection PhpIncludeInspection */
    require $autoloadPath;

    (new Application('depreday', Versions::getVersion('malukenho/depreday')))
        ->register('depreday')
        ->addArgument('dir', InputArgument::OPTIONAL, 'The directory')
        ->setCode(new App())
        ->getApplication()
        ->setDefaultCommand('depreday', true)
        ->run();
})();
